<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <size
                    android:height="50dp"
                    android:width="50dp" />
                <solid
                    android:color="#fff"/>
            </shape>
        </rotate>
    </item>
</selector>