<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:orientation="vertical">

            <!-- Messaggio superiore -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrati"
                android:textAlignment="center"
                style="@style/page_titles_style"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <!-- Titolo app -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QU"
                    android:textAppearance="@style/title_style"
                    android:textSize="35dp"/>

                <ImageView
                    android:id="@+id/o1"
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/title_dice"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   VAD"
                    android:textAppearance="@style/title_style"
                    android:textSize="35dp"/>

                <ImageView
                    android:id="@+id/o2"
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/title_dice" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ?"
                    android:textAppearance="@style/title_style"
                    android:textSize="35dp"/>
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <!-- Layout contenente i campi da compilare -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/register_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/credentials_input_title"
                android:text="Nome e Cognome:"/>

            <EditText
                android:id="@+id/regUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Scrivi il tuo nome..."
                style="@style/credentials_input_box"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <!--Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                style="@style/credentials_input_title"/>

            <EditText
                android:id="@+id/regPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Crea la tua password..."
                android:inputType="textPassword"
                style="@style/credentials_input_box" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <!-- Conferma Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conferma password:"
                style="@style/credentials_input_title" />

            <EditText
                android:id="@+id/regConfPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Conferma la tua password..."
                android:inputType="textPassword"
                style="@style/credentials_input_box" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <!--CittÃ  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Citta'"
                style="@style/credentials_input_title"/>

            <EditText
                android:id="@+id/regCitta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dove ti trovi ora..."
                style="@style/credentials_input_box"/>

        </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <!-- Bottone-->
            <Button
                android:id="@+id/regButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                style="@style/buttons"
                android:text="Iscriviti"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>