<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <DatePicker
        android:id="@+id/datePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:headerBackground="#FFBA5C"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/page_subtitles_style"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="partenza"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/datePicker1"
        app:layout_constraintLeft_toLeftOf="@id/datePicker1"
        >

    </TextView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="#fff"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="@id/datePicker1"
        app:layout_constraintLeft_toLeftOf="@id/datePicker1"
        android:background="@drawable/departure">

    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>