<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_style">
        <item name="android:fontFamily">@font/josefin_slab_bold</item>
        <item name="android:textColor">#FF47525E</item>
        <item name="android:textSize">40sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="page_titles_style">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#FF47525E</item>
        <item name="android:textSize">30sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    <!--
    <style name="login_theme">
        <item name="android:layout_margin">20dp</item>
    </style>
    -->
    <style name="buttons">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bottoni_principali</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="credentials_input_title">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#FF222222</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="credentials_input_box">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/credentials_input_shape</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:paddingLeft">12dp</item>
    </style>
    <style name="background_register">
        <item name="android:background">@drawable/register_background</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="search_bar_style">
        <item name="android:background">@drawable/search_bar_shape</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="profile_title">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18dp</item>
        <item name="android:color">@color/light_grey</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="profile_subtitle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:color">@color/light_grey</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="general_input_field_title">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/grigio</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:gravity">bottom</item>
    </style>
</resources>
